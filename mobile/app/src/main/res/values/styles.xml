<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.CampReservation" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_secondary</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CampButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="CampCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/green_primary</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>