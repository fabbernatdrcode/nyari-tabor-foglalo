<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sky background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#81D4FA"
                    android:endColor="#4FC3F7"
                    android:angle="270"/>
        </shape>
    </item>

    <!-- Grass/field at bottom -->
    <item android:top="300dp">
        <shape android:shape="rectangle">
            <gradient
                    android:startColor="#AED581"
                    android:endColor="#7CB342"
                    android:angle="270"/>
        </shape>
    </item>

    <!-- Lake/teal overlay -->
    <item android:top="500dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <solid android:color="#4DD0E1"/> <!-- Lake color -->
        </shape>
    </item>

    <!-- Sun circle in the top-left -->
    <item android:top="32dp" android:left="32dp">
        <shape android:shape="oval">
            <size
                    android:width="100dp"
                    android:height="100dp"/>
            <solid android:color="#FFF176"/> <!-- Sunny yellow -->
            <stroke
                    android:width="2dp"
                    android:color="#FDD835"/> <!-- Slight darker ring -->
        </shape>
    </item>

</layer-list>
